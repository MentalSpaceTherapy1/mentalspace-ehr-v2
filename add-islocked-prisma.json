{
  "family": "mentalspace-migration",
  "taskRoleArn": "arn:aws:iam::706704660887:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::706704660887:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "migration",
      "image": "706704660887.dkr.ecr.us-east-1.amazonaws.com/mentalspace-backend:latest",
      "command": ["node", "-e", "const{PrismaClient}=require('@prisma/client');const p=new PrismaClient();(async()=>{try{await p.$executeRawUnsafe('ALTER TABLE clinical_notes ADD COLUMN IF NOT EXISTS \"isLocked\" BOOLEAN NOT NULL DEFAULT false;');console.log('SUCCESS: isLocked column added');process.exit(0)}catch(e){console.error('ERROR:',e.message);process.exit(1)}finally{await p.$disconnect()}})()"],
      "essential": true,
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://mentalspace_admin:MentalSpace2024!SecurePwd@mentalspace-ehr-prod.ci16iwey2cac.us-east-1.rds.amazonaws.com:5432/mentalspace_ehr"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mentalspace-migration",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "migration"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}
