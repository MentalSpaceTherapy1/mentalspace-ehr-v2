    "test:performance:db": "jest --testPathPattern=__tests__/performance/database",
    "test:performance:load": "jest --testPathPattern=__tests__/performance/load-testing",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
