import { useEffect, useState } from 'react';
import { useNavigate } from 'react-router-dom';
import api from '../../lib/api';
import { toast } from 'react-hot-toast';
import { Calendar, Clock, User, MapPin, ChevronLeft, ChevronRight } from 'lucide-react';
import { format, addDays, startOfWeek, addWeeks, isSameDay, parseISO } from 'date-fns';

/**
 * Module 7: Client Self-Scheduling Interface
 *
 * Allows clients to view available slots and book appointments
 */

interface Clinician {
  id: string;
  firstName: string;
  lastName: string;
  title?: string;
  email: string;
}

interface AppointmentType {
  id: string;
  typeName: string;
  category: string;
  description?: string;
  defaultDuration: number;
  colorCode?: string;
  iconName?: string;
}

interface TimeSlot {
  startTime: string;
  endTime: string;
  duration: number;
  available: boolean;
  reason?: string;
}

interface DaySlots {
  date: string;
  slots: TimeSlot[];
}

interface MyAppointment {
  id: string;
  appointmentDate: string;
  startTime: string;
  endTime: string;
  duration: number;
  status: string;
  appointmentType: string;
  serviceLocation: string;
  clinician: {
    id: string;
    firstName: string;
    lastName: string;
    title?: string;
  };
}

export default function PortalSelfScheduling() {
  const navigate = useNavigate();
  const [step, setStep] = useState<'clinician' | 'type' | 'slot' | 'confirm'>('clinician');
  const [isLoading, setIsLoading] = useState(false);

  // Selection state
  const [selectedClinician, setSelectedClinician] = useState<Clinician | null>(null);
  const [selectedType, setSelectedType] = useState<AppointmentType | null>(null);
  const [selectedSlot, setSelectedSlot] = useState<TimeSlot | null>(null);
  const [selectedDate, setSelectedDate] = useState<string | null>(null);
  const [serviceLocation, setServiceLocation] = useState<'IN_PERSON' | 'TELEHEALTH'>('TELEHEALTH');
  const [notes, setNotes] = useState('');

  // Data state
  const [clinicians, setClinicians] = useState<Clinician[]>([]);
  const [appointmentTypes, setAppointmentTypes] = useState<AppointmentType[]>([]);
  const [availableSlots, setAvailableSlots] = useState<DaySlots[]>([]);
  const [myAppointments, setMyAppointments] = useState<MyAppointment[]>([]);

  // Calendar state
  const [currentWeekStart, setCurrentWeekStart] = useState(startOfWeek(new Date(), { weekStartsOn: 1 }));
  const [selectedDayView, setSelectedDayView] = useState<Date>(new Date());

  useEffect(() => {
    fetchClinicians();
    fetchAppointmentTypes();
    fetchMyAppointments();
  }, []);

  useEffect(() => {
    if (selectedClinician && step === 'slot') {
      fetchAvailableSlots();
    }
  }, [selectedClinician, currentWeekStart]);

  const fetchClinicians = async () => {
    try {
      const response = await api.get('/self-schedule/clinicians');
      if (response.data.success) {
        setClinicians(response.data.data);
      }
    } catch (error: any) {
      toast.error('Failed to load available clinicians');
    }
  };

  const fetchAppointmentTypes = async () => {
    try {
      const response = await api.get('/self-schedule/appointment-types');
      if (response.data.success) {
        setAppointmentTypes(response.data.data);
      }
    } catch (error: any) {
      toast.error('Failed to load appointment types');
    }
  };

  const fetchAvailableSlots = async () => {
    if (!selectedClinician) return;

    try {
      setIsLoading(true);
      const startDate = currentWeekStart.toISOString();
      const endDate = addWeeks(currentWeekStart, 2).toISOString();

      const response = await api.get(
        `/self-schedule/available-slots/${selectedClinician.id}`,
        {
          params: { startDate, endDate },
        }
      );

      if (response.data.success) {
        setAvailableSlots(response.data.data);
      }
    } catch (error: any) {
      toast.error('Failed to load available slots');
    } finally {
      setIsLoading(false);
    }
  };

  const fetchMyAppointments = async () => {
    try {
      const response = await api.get('/self-schedule/my-appointments');
      if (response.data.success) {
        setMyAppointments(response.data.data);
      }
    } catch (error: any) {
      console.error('Failed to load appointments', error);
    }
  };

  const handleSelectClinician = (clinician: Clinician) => {
    setSelectedClinician(clinician);
    setStep('type');
  };

  const handleSelectType = (type: AppointmentType) => {
    setSelectedType(type);
    setStep('slot');
  };

  const handleSelectSlot = (slot: TimeSlot, date: string) => {
    setSelectedSlot(slot);
    setSelectedDate(date);
    setStep('confirm');
  };

  const handleBookAppointment = async () => {
    if (!selectedClinician || !selectedType || !selectedSlot || !selectedDate) {
      toast.error('Please complete all selections');
      return;
    }

    try {
      setIsLoading(true);
      const appointmentDate = new Date(selectedDate + 'T' + selectedSlot.startTime);

      const response = await api.post('/self-schedule/book', {
        clinicianId: selectedClinician.id,
        appointmentDate: appointmentDate.toISOString(),
        appointmentType: selectedType.typeName,
        duration: selectedType.defaultDuration,
        notes,
        serviceLocation,
      });

      if (response.data.success) {
        toast.success(response.data.message || 'Appointment booked successfully!');
        resetBooking();
        fetchMyAppointments();
        navigate('/portal/appointments');
      }
    } catch (error: any) {
      toast.error(error.response?.data?.message || 'Failed to book appointment');
    } finally {
      setIsLoading(false);
    }
  };

  const resetBooking = () => {
    setSelectedClinician(null);
    setSelectedType(null);
    setSelectedSlot(null);
    setSelectedDate(null);
    setNotes('');
    setStep('clinician');
  };

  const handleCancelAppointment = async (appointmentId: string) => {
    if (!confirm('Are you sure you want to cancel this appointment?')) return;

    try {
      const reason = prompt('Please provide a reason for cancellation:');
      if (!reason) return;

      const response = await api.delete(`/self-schedule/cancel/${appointmentId}`, {
        data: { reason },
      });

      if (response.data.success) {
        toast.success('Appointment cancelled successfully');
        fetchMyAppointments();
      }
    } catch (error: any) {
      toast.error(error.response?.data?.message || 'Failed to cancel appointment');
    }
  };

  const getSlotsForDate = (date: Date): TimeSlot[] => {
    const dateStr = format(date, 'yyyy-MM-dd');
    const daySlots = availableSlots.find((d) => d.date === dateStr);
    return daySlots?.slots.filter((s) => s.available) || [];
  };

  const getWeekDays = () => {
    const days = [];
    for (let i = 0; i < 7; i++) {
      days.push(addDays(currentWeekStart, i));
    }
    return days;
  };

  const renderClinicianSelection = () => (
    <div className="space-y-4">
      <h2 className="text-2xl font-bold text-gray-900">Select a Clinician</h2>
      <p className="text-gray-600">Choose the therapist you'd like to schedule with</p>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
        {clinicians.map((clinician) => (
          <button
            key={clinician.id}
            onClick={() => handleSelectClinician(clinician)}
            className="p-6 border-2 border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-all text-left"
          >
            <div className="flex items-center space-x-3">
              <div className="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                <User className="w-6 h-6 text-blue-600" />
              </div>
              <div>
                <h3 className="font-semibold text-gray-900">
                  {clinician.firstName} {clinician.lastName}
                  {clinician.title && `, ${clinician.title}`}
                </h3>
                <p className="text-sm text-gray-500">{clinician.email}</p>
              </div>
            </div>
          </button>
        ))}
      </div>
    </div>
  );

  const renderTypeSelection = () => (
    <div className="space-y-4">
      <button
        onClick={() => setStep('clinician')}
        className="flex items-center text-blue-600 hover:text-blue-700"
      >
        <ChevronLeft className="w-4 h-4" />
        Back to clinicians
      </button>

      <h2 className="text-2xl font-bold text-gray-900">Select Appointment Type</h2>
      <p className="text-gray-600">
        Scheduling with {selectedClinician?.firstName} {selectedClinician?.lastName}
      </p>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
        {appointmentTypes.map((type) => (
          <button
            key={type.id}
            onClick={() => handleSelectType(type)}
            className="p-6 border-2 border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-all text-left"
          >
            <h3 className="font-semibold text-gray-900">{type.typeName}</h3>
            {type.description && <p className="text-sm text-gray-600 mt-2">{type.description}</p>}
            <div className="flex items-center mt-3 text-sm text-gray-500">
              <Clock className="w-4 h-4 mr-1" />
              {type.defaultDuration} minutes
            </div>
          </button>
        ))}
      </div>
    </div>
  );

  const renderSlotSelection = () => {
    const weekDays = getWeekDays();

    return (
      <div className="space-y-4">
        <button
          onClick={() => setStep('type')}
          className="flex items-center text-blue-600 hover:text-blue-700"
        >
          <ChevronLeft className="w-4 h-4" />
          Back to appointment types
        </button>

        <h2 className="text-2xl font-bold text-gray-900">Select Time Slot</h2>
        <p className="text-gray-600">
          {selectedType?.typeName} ({selectedType?.defaultDuration} min) with{' '}
          {selectedClinician?.firstName} {selectedClinician?.lastName}
        </p>

        {/* Week navigation */}
        <div className="flex items-center justify-between bg-white p-4 rounded-lg shadow-sm">
          <button
            onClick={() => setCurrentWeekStart(addWeeks(currentWeekStart, -1))}
            disabled={currentWeekStart <= new Date()}
            className="p-2 hover:bg-gray-100 rounded-lg disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <ChevronLeft className="w-5 h-5" />
          </button>
          <span className="font-semibold">
            {format(currentWeekStart, 'MMM d')} - {format(addDays(currentWeekStart, 6), 'MMM d, yyyy')}
          </span>
          <button
            onClick={() => setCurrentWeekStart(addWeeks(currentWeekStart, 1))}
            className="p-2 hover:bg-gray-100 rounded-lg"
          >
            <ChevronRight className="w-5 h-5" />
          </button>
        </div>

        {/* Calendar grid */}
        <div className="grid grid-cols-7 gap-2">
          {weekDays.map((day) => {
            const slots = getSlotsForDate(day);
            const isToday = isSameDay(day, new Date());
            const isPast = day < new Date();

            return (
              <div key={day.toISOString()} className="border rounded-lg overflow-hidden">
                <div
                  className={`p-2 text-center font-semibold ${
                    isToday ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-700'
                  }`}
                >
                  <div className="text-xs">{format(day, 'EEE')}</div>
                  <div className="text-lg">{format(day, 'd')}</div>
                </div>
                <div className="p-2 space-y-1 max-h-96 overflow-y-auto">
                  {isPast ? (
                    <p className="text-xs text-gray-400 text-center">Past</p>
                  ) : slots.length === 0 ? (
                    <p className="text-xs text-gray-400 text-center">No slots</p>
                  ) : (
                    slots.slice(0, 10).map((slot, idx) => (
                      <button
                        key={idx}
                        onClick={() => handleSelectSlot(slot, format(day, 'yyyy-MM-dd'))}
                        className="w-full text-xs bg-green-50 hover:bg-green-100 text-green-700 p-1.5 rounded border border-green-200 transition-colors"
                      >
                        {slot.startTime}
                      </button>
                    ))
                  )}
                  {slots.length > 10 && (
                    <p className="text-xs text-gray-500 text-center">+{slots.length - 10} more</p>
                  )}
                </div>
              </div>
            );
          })}
        </div>

        {isLoading && (
          <div className="text-center py-8">
            <div className="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
            <p className="mt-2 text-gray-600">Loading available slots...</p>
          </div>
        )}
      </div>
    );
  };

  const renderConfirmation = () => (
    <div className="space-y-6">
      <button
        onClick={() => setStep('slot')}
        className="flex items-center text-blue-600 hover:text-blue-700"
      >
        <ChevronLeft className="w-4 h-4" />
        Back to time slots
      </button>

      <h2 className="text-2xl font-bold text-gray-900">Confirm Appointment</h2>

      <div className="bg-white border-2 border-gray-200 rounded-lg p-6 space-y-4">
        <div className="flex items-start space-x-3">
          <User className="w-5 h-5 text-gray-400 mt-0.5" />
          <div>
            <p className="text-sm text-gray-500">Clinician</p>
            <p className="font-semibold">
              {selectedClinician?.firstName} {selectedClinician?.lastName}
              {selectedClinician?.title && `, ${selectedClinician.title}`}
            </p>
          </div>
        </div>

        <div className="flex items-start space-x-3">
          <Calendar className="w-5 h-5 text-gray-400 mt-0.5" />
          <div>
            <p className="text-sm text-gray-500">Date & Time</p>
            <p className="font-semibold">
              {selectedDate && format(parseISO(selectedDate), 'EEEE, MMMM d, yyyy')} at {selectedSlot?.startTime}
            </p>
          </div>
        </div>

        <div className="flex items-start space-x-3">
          <Clock className="w-5 h-5 text-gray-400 mt-0.5" />
          <div>
            <p className="text-sm text-gray-500">Appointment Type</p>
            <p className="font-semibold">
              {selectedType?.typeName} ({selectedType?.defaultDuration} minutes)
            </p>
          </div>
        </div>

        <div className="flex items-start space-x-3">
          <MapPin className="w-5 h-5 text-gray-400 mt-0.5" />
          <div>
            <p className="text-sm text-gray-500">Location</p>
            <div className="flex space-x-2 mt-1">
              <button
                onClick={() => setServiceLocation('TELEHEALTH')}
                className={`px-3 py-1 rounded-md text-sm font-medium ${
                  serviceLocation === 'TELEHEALTH'
                    ? 'bg-blue-100 text-blue-700 border border-blue-300'
                    : 'bg-gray-100 text-gray-600'
                }`}
              >
                Telehealth
              </button>
              <button
                onClick={() => setServiceLocation('IN_PERSON')}
                className={`px-3 py-1 rounded-md text-sm font-medium ${
                  serviceLocation === 'IN_PERSON'
                    ? 'bg-blue-100 text-blue-700 border border-blue-300'
                    : 'bg-gray-100 text-gray-600'
                }`}
              >
                In-Person
              </button>
            </div>
          </div>
        </div>

        <div>
          <label className="block text-sm text-gray-500 mb-1">Notes (Optional)</label>
          <textarea
            value={notes}
            onChange={(e) => setNotes(e.target.value)}
            rows={3}
            className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Any specific topics or concerns you'd like to discuss..."
          />
        </div>
      </div>

      <div className="flex space-x-3">
        <button
          onClick={handleBookAppointment}
          disabled={isLoading}
          className="flex-1 bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed font-semibold transition-colors"
        >
          {isLoading ? 'Booking...' : 'Confirm Appointment'}
        </button>
        <button
          onClick={resetBooking}
          className="px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-semibold transition-colors"
        >
          Cancel
        </button>
      </div>
    </div>
  );

  return (
    <div className="max-w-7xl mx-auto px-4 py-8">
      {/* My Appointments Summary */}
      {myAppointments.length > 0 && step === 'clinician' && (
        <div className="mb-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 className="font-semibold text-blue-900 mb-2">Your Upcoming Appointments</h3>
          <div className="space-y-2">
            {myAppointments.slice(0, 3).map((apt) => (
              <div key={apt.id} className="flex justify-between items-center text-sm">
                <span className="text-blue-800">
                  {format(parseISO(apt.appointmentDate), 'MMM d, yyyy')} at {apt.startTime} with{' '}
                  {apt.clinician.firstName} {apt.clinician.lastName}
                </span>
                <button
                  onClick={() => handleCancelAppointment(apt.id)}
                  className="text-red-600 hover:text-red-700 text-xs"
                >
                  Cancel
                </button>
              </div>
            ))}
          </div>
          {myAppointments.length > 3 && (
            <button
              onClick={() => navigate('/portal/appointments')}
              className="text-blue-600 hover:text-blue-700 text-sm mt-2"
            >
              View all appointments â†’
            </button>
          )}
        </div>
      )}

      {/* Main content */}
      <div className="bg-white rounded-lg shadow-lg p-6 md:p-8">
        {step === 'clinician' && renderClinicianSelection()}
        {step === 'type' && renderTypeSelection()}
        {step === 'slot' && renderSlotSelection()}
        {step === 'confirm' && renderConfirmation()}
      </div>
    </div>
  );
}
