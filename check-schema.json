{
  "family": "mentalspace-migration",
  "taskRoleArn": "arn:aws:iam::706704660887:role/ecsTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::706704660887:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "migration",
      "image": "706704660887.dkr.ecr.us-east-1.amazonaws.com/mentalspace-backend:latest",
      "command": ["sh", "-c", "cd /app/packages/database && npx prisma db execute --stdin <<< 'SELECT column_name, data_type FROM information_schema.columns WHERE table_name = '\"'\"'clinical_notes'\"'\"' ORDER BY ordinal_position;'"],
      "essential": true,
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://mentalspace_admin:MentalSpace2024!SecurePwd@mentalspace-ehr-prod.ci16iwey2cac.us-east-1.rds.amazonaws.com:5432/mentalspace_ehr"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mentalspace-migration",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "migration"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}
